{
  "window.zoomLevel": 0,
  "breadcrumbs.enabled": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "emmet.triggerExpansionOnTab": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "boundary",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  ////////////////    Font Settings     ////////////////
  "editor.codeLensFontFamily": "Monaco",
  "editor.inlayHints.fontFamily": "Monaco",
  "editor.fontFamily": "Monaco",
  "editor.fontSize": 15,
  "editor.fontWeight": "400",
  ///////////////////////////////////
  "editor.insertSpaces": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.autoSaveDelay": 1000,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.idea": true,
    "**/*.pyc": true,
    "**/*.vscode": true
  },
  "files.associations": {
    "*Dockerfile*": "dockerfile",
    "yml": "yaml",
    "*.html": "html"
  },
  ///////////////////////     let VSCODE ignore these directory watching below    ///////////////////////
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.rvm/**": true,
    "**/node_modules/**": true,
    "**/GoogleDrive/**": true,
    "**/Dropbox/**": true,
    "**/Pictures/**": true
  },
  "html.format.enable": true,
  /////////////////////////   Terminal Settings    /////////////////////////
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 16,
  ///////////////////////// setting for Color Theme or Editor    /////////////////////////
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.preferredDarkColorTheme": "Default Light+",
  "workbench.iconTheme": "material-icon-theme",
  ///////////////// Prettier ////////////////////////////
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // bracketPairColorizer
  "bracketPairColorizer.activeScopeCSS": [
    "borderStyle : solid",
    "borderWidth : 1px",
    "borderColor : {color}; opacity: 0.5"
  ],
  ///////////////////////  ESLINT    /////////////////////
  "eslint.alwaysShowStatus": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "yarn",
  /////////////////////  PYTHON SETTINGS  ////////////////
  "python.pythonPath": "/Users/yamadaasuma/.pyenv/shims/python",
  "python.venvFolders": ["venv"],
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": false,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--ignore=W293, W504",
    "--max-line-length=150",
    "--max-complexity=20"
  ],
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": ["--aggressive", "--aggressive"],
  "python.defaultInterpreterPath": "/Users/a.yamada/.pyenv/shims/python",
  "python.formatting.autopep8Path": "/Users/a.yamada/.pyenv/shims/autopep8",
  //////////////////////  Language Settings  //////////////////////
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  // When editting .md file, turn off trimTrailingWhitespace function
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[dockerfile]": {
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[makefile]": {
    "editor.insertSpaces": false
  },
}
