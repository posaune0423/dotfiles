{
  // ============================================
  // Editor Settings
  // ============================================
  "editor.fontFamily": "Monaco Nerd Font",
  "editor.fontSize": 11,
  "editor.fontWeight": "400",
  "editor.codeLensFontFamily": "Monaco Nerd Font",
  "editor.inlayHints.fontFamily": "Monaco Nerd Font",
  "editor.insertSpaces": false,
  "editor.renderWhitespace": "boundary",
  "editor.suggestSelection": "first",

  // ============================================
  // Workbench Settings
  // ============================================
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.preferredDarkColorTheme": "Default Light+",
  "workbench.iconTheme": "material-icon-theme",

  // ============================================
  // Terminal Settings
  // ============================================
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.fontFamily": "Monaco Nerd Font",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "200",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.enableVisualBell": false,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.bellDuration": 0,

  // ============================================
  // Files Settings
  // ============================================
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.idea": true,
    "**/*.pyc": true
  },
  "files.associations": {
    "*Dockerfile*": "dockerfile",
    "yml": "yaml",
    "*.html": "html"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.rvm/**": true,
    "**/node_modules/**": true,
    "**/GoogleDrive/**": true,
    "**/Dropbox/**": true,
    "**/.nuxt/**": true,
    "**/build/**": true,
    "**/Pictures/**": true
  },

  // ============================================
  // Git Settings
  // ============================================
  "git.suggestSmartCommit": false,
  "git.confirmSync": false,

  // ============================================
  // Accessibility Settings
  // ============================================
  "accessibility.signals.terminalBell": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.terminalCommandSucceeded": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.terminalCommandFailed": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.lineHasBreakpoint": {
    "announcement": "off",
    "sound": "off"
  },
  "accessibility.signals.onDebugBreak": {
    "sound": "off",
    "announcement": "off"
  },

  // ============================================
  // Explorer Settings
  // ============================================
  "explorer.confirmDelete": false,

  // ============================================
  // Breadcrumbs Settings
  // ============================================
  "breadcrumbs.enabled": true,

  // ============================================
  // Emmet Settings
  // ============================================
  "emmet.triggerExpansionOnTab": true,

  // ============================================
  // Language-Specific Settings
  // ============================================
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[dockerfile]": {
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[makefile]": {
    "editor.insertSpaces": false
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.wordBasedSuggestions": "off"
  },
  "[cairo]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },

  // ============================================
  // Extension Settings
  // ============================================
  // Prettier
  "prettier.semi": false,
  "prettier.singleQuote": true,

  // ESLint
  "eslint.lintTask.enable": true,

  // JavaScript/TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",

  // HTML
  "html.format.enable": true,

  // Python
  "python.pythonPath": "/Users/yamadaasuma/.pyenv/shims/python",
  "python.venvFolders": ["venv"],
  "python.defaultInterpreterPath": "/Users/yamadaasuma/.pyenv/shims/python",
  "python.venvPath": "/Users/a.yamada/.pyenv",

  // PHP CS Fixer
  "php-cs-fixer.executablePath": "/usr/local/bin/php-cs-fixer",
  "php-cs-fixer.onsave": true,
  "php-cs-fixer.rules": "@Symfony,-phpdoc_summary,-phpdoc_to_comment",

  // YAML
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "yaml.validate": false,

  // Material Icon Theme
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.files.associations": {
    "*.cairo": "rust"
  },

  // Cairo
  "cairo1.enableLanguageServer": true,
  "cairo1.enableScarb": true,
  "cairo1.scarbPath": "~/.asdf/shims/scarb",
  "cairo1.languageServerPath": "~/.asdf/installs/dojo/0.7.2/bin/dojo-language-server",

  // Red Hat Telemetry
  "redhat.telemetry.enabled": true,

  // Cursor Composer
  "cursor.composer.shouldChimeAfterChatFinishes": true,

  // Code Spell Checker
  "cSpell.userWords": [
    "agentic",
    "backtest",
    "bunx",
    "Chainlink",
    "cooldown",
    "daiko",
    "Initializable",
    "moltworker",
    "neverthrow",
    "POLYMARKET",
    "posaune",
    "Reentrancy",
    "Solana",
    "Substreams",
    "timestamptz",
    "UUPS",
    "Velvett"
  ],
  "terminal.integrated.env.osx": {
    "Q_NEW_SESSION": "1"
  },
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "update.releaseTrack": "dev",
  "update.mode": "silentlyApplyOnQuit",
  "workbench.editor.enablePreview": false,
  "editor.accessibilitySupport": "off",
  "workbench.colorTheme": "GitHub Dark Default",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
}
